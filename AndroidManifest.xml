<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ca.mint.mintchip.android.sample"
      android:versionCode="1"
      android:versionName="1.0">
      
    <uses-sdk android:minSdkVersion="10" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/logo" android:label="@string/app_name">
    
        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".MakePaymentActivity">
			<!-- To open Value Request Messages   -->		    
 			<intent-filter> 
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.BROWSABLE" /> 
		        <category android:name="android.intent.category.DEFAULT" />
		        <data android:mimeType="application/vnd.scg.ecn-request" />
		        <data android:scheme="http" android:host="*" />
		    </intent-filter>
        </activity>

        <activity android:name=".AcceptPaymentActivity">		
			<!-- To open .ecn files -->		    
 			<intent-filter> 
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.DEFAULT" />
		        <data android:mimeType="*/*" />
		        <data android:scheme="file" android:host="*" android:pathPattern=".*\\.ecn" />
		    </intent-filter>

			<!-- To open Value Messages   -->		    
 			<intent-filter> 
		        <action android:name="android.intent.action.VIEW" />
		        <category android:name="android.intent.category.BROWSABLE" /> 
		        <category android:name="android.intent.category.DEFAULT" />
		        <data android:mimeType="application/vnd.scg.ecn-message" />
		        <data android:scheme="http" android:host="*" />
		    </intent-filter>
        </activity>
        
        <activity android:name=".TransactionLogActivity"/>
    </application>
</manifest>